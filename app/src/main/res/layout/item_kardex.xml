<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_kardex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_button"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/kardexName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NOMBRE DEL PROCESO"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kardexDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DESCRIPCION DEL PROCESO"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/kardexDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DATE DEL PROCESO"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>